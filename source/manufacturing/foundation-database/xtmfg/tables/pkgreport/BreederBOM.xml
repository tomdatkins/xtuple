 <querysource>
  <name>head</name>
  <sql>SELECT item_number,
       item_descrip1,
       item_descrip2,
       uom_name AS iteminvuom,
       &lt;? if exists("showExpired") ?>
         text('Yes')
       &lt;? else ?>
         text('No')
       &lt;? endif ?>
       AS lbl_showexpired,
       &lt;? if exists("showFuture") ?>
         text('Yes')
       &lt;? else ?>
         text('No')
       &lt;? endif ?>
       AS lbl_showfuture
  FROM item JOIN uom ON (item_inv_uom_id=uom_id)
 WHERE (item_id=&lt;? value("item_id") ?>);
</sql>
 </querysource>
 <querysource>
  <name>detail</name>
  <sql>SELECT bbomitem_id,
       item_number,
       item_descrip1,
       item_descrip2,
       uom_name AS iteminvuom,
       CASE WHEN (item_type='C') THEN 'Co-Product'
            WHEN (item_type='Y') THEN 'By-Product'
            ELSE 'Error'
       END AS f_type,
       formatQtyPer(bbomitem_qtyper) AS f_qty,
       formatDate(bbomitem_effective, 'Always') AS f_effective,
       formatDate(bbomitem_expires, 'Never') AS f_expires,
       CASE WHEN (item_type='Y') THEN 'N/A'
            ELSE formatScrap(bbomitem_costabsorb)
       END AS f_costper
  FROM xtmfg.bbomitem, item JOIN uom ON (item_inv_uom_id=uom_id)
 WHERE ((bbomitem_item_id=item_id)
   AND (bbomitem_parent_item_id=&lt;? value("item_id") ?>)
&lt;? if not exists("showExpired") ?>
   AND (bbomitem_expires > CURRENT_DATE)
&lt;? endif ?>
&lt;? if not exists("showFuture") ?>
   AND (bbomitem_effective &lt;= CURRENT_DATE)
&lt;? endif ?>
)
ORDER BY bbomitem_seqnumber, bbomitem_effective</sql>
 </querysource>
 <querysource>
  <name>costsabsorbed</name>
  <sql>SELECT formatScrap(SUM(bbomitem_costabsorb)) AS f_absorb,
       SUM(bbomitem_costabsorb) AS absorb
  FROM bbomitem
 WHERE (bbomitem_parent_item_id=&lt;? value("item_id") ?>);</sql>
 </querysource>
