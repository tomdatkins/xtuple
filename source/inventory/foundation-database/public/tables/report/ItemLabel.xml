 <topmargin>11</topmargin>
 <bottommargin>0</bottommargin>
 <rightmargin>11</rightmargin>
 <leftmargin>11</leftmargin>
 <querysource>
  <name>detail</name>
  <sql>SELECT
  item_number,
  item_descrip1,
  item_upccode
  &lt;? if exists("isLotControlled") ?>
  , ls_number
  &lt;? endif ?>
FROM item
  JOIN itemsite ON itemsite_item_id = item_id AND itemsite.obj_uuid = &lt;? value("itemsite_uuid") ?>
  &lt;? if exists("isLotControlled") ?>
  , (
    SELECT ls_number 
    FROM invdetail
      JOIN invhist ON invdetail_invhist_id = invhist_id AND invhist_ordnumber = &lt;? value("invhist_ordnumber") ?>
      JOIN itemsite ON invhist_itemsite_id = itemsite_id AND itemsite.obj_uuid = &lt;? value("itemsite_uuid") ?>
      LEFT OUTER JOIN ls ON invdetail_ls_id = ls_id,
      sequence
    WHERE sequence_value &lt;= abs(invdetail_qty)
  ) AS invhist
  &lt;? endif ?>
WHERE 1=1</sql>
 </querysource>
