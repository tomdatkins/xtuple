<!DOCTYPE openRPTDef>
<report>
 <title>ItemLabel</title>
 <name>ItemLabel</name>
 <description></description>
 <parameter default="" active="true" listtype="static" type="string" name="itemsite_uuid">
  <description></description>
 </parameter>
 <grid>
  <snap/>
  <show/>
  <x>0.05</x>
  <y>0.05</y>
 </grid>
 <size>
  <width>400</width>
  <height>300</height>
 </size>
