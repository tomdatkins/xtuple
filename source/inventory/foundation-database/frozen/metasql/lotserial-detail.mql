SELECT ls_number, ls_notes, 
  formatlotserialnumberbarcode(ls_number) AS lotserial_barcode,
  item_number, item_descrip1, item_descrip2
FROM ls
 JOIN item ON (item_id=ls_item_id)
WHERE (ls_id=<? value("ls_id") ?>);
